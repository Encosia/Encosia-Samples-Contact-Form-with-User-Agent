@model WebApplication4.Models.IndexViewModel

@{
  ViewBag.Title = "Index";
}

<form method="post">
  <div class="form-group">
    <label>Your name</label>
    <input type="text" class="form-control" id="Name" name="Name" placeholder="Your name" />
  </div>

  <div class="form-group">
    <label>Your email address</label>
    <input type="email" class="form-control" id="Email" name="Email" placeholder="Your email address" />
  </div>

  <div class="form-group">
    <label>Your message</label>
    <textarea class="form-control" id="Message" name="Message" placeholder="Your message here..."></textarea>
  </div>

  <div class="form-group">
    <input type="submit" class="btn btn-default" />
  </div>

  @if (Model != null && !String.IsNullOrWhiteSpace(Model.UserAgent)) {
    <p>Thanks for your message, <code>@Model.UserAgent</code>, we'll be in touch shortly.</p>
  }
</form>